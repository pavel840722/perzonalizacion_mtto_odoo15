<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="df_message_wizard_form" model="ir.ui.view">
            <field name="name">df.message.wizard.form</field>
            <field name="model">df.message.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <field name="message" readonly="True"/>
                    <footer>
                        <button name="action_close" string="Ok" type="object" default_focus="1" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>